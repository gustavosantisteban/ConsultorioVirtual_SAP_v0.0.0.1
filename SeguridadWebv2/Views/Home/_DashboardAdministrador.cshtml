<script src="~/Scripts/chartjs/Chart.min.js"></script>
<script>
    // Get context with jQuery - using jQuery's .get() method.
    var salesChartCanvas = $("#salesChart").get(0).getContext("2d");
    // This will get the first returned node in the jQuery collection.
    var salesChart = new Chart(salesChartCanvas);
    //var resultado = Html.Raw(Json.Encode(ViewBag.reportemensual));

    var resultado = @Html.Raw(Json.Encode(ViewBag.reportemensual));
    var values1 = function PrintResults() {
        var devolverstring = [];
        $.each(JSON.parse(resultado), function(key, element) {
            console.log(element.data);
            devolverstring.push(element.data);
        })
        return devolverstring;
    };

    var resultado2 = @Html.Raw(Json.Encode(ViewBag.ordenturno));
    var values2 = function PrintResults() {
