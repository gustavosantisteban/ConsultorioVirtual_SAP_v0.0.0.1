<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    @Styles.Render("~/Content/cssespecialista")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">CRISP_WEBSITE_ID = "55779855-011d-4335-b4c4-94cc7524fb14";(function(){d=document;s=d.createElement("script");s.src="https://client.crisp.im/l.js";s.async=1;d.getElementsByTagName("head")[0].appendChild(s);})();</script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Consultorio Virtual", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li class="active">@Html.ActionLink("Acerca de", "About", "Home")</li>
                    <li class="active">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li class="active">@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container indexcontainer">
        @RenderBody()
        <hr />
        <footer>
            <p>Consultorio Virtual - &copy; @DateTime.Now.Year</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
