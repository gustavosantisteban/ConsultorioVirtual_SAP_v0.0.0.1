@model SeguridadWebv2.Models.Aplicacion.GeneralViewModels

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Inicio</th>
            <th>Fin</th>
            <th>Estado</th>
            <th>Precio</th>
            <th>Reservar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var horario in Model.Horarios)
        {
            <tr>
                <td>@horario.FechaInicio.ToShortTimeString()</td>
                <td>@horario.FechaFin.ToShortTimeString()</td>
                <td>@horario.Estado</td>
                <td>$ @horario.Precio</td>
                <td class="text-center">
                    <a href="@Url.Action("ReservarTurno", "Turno", new { id = horario.IDHorario, espec = horario.Especialista.EspecialistaId })" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-pencil"></span> Reservar </a>
                </td>
            </tr>
        }
    </tbody>
</table>
